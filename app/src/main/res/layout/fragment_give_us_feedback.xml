<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:textSize="@dimen/muoi_lam_sp"
            android:id="@+id/tv_title_frag_result"
            android:text="@string/app_name"
            android:textColor="@color/color_text_tab_speed"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <ImageView
            android:layout_marginLeft="@dimen/muoi_dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_back_fragment_give_us_feedback"
            android:src="@drawable/ic_back_white"
            android:layout_width="@dimen/hai_muoi_dp"
            android:layout_height="@dimen/hai_muoi_dp" />

        <TextView
            android:id="@+id/tv_ok_frag_give_us_feedback"
            android:layout_marginRight="@dimen/muoi_dp"
            android:textSize="@dimen/muoi_hai_sp"
            android:textColor="@color/color_white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <EditText
        android:padding="@dimen/nam_dp"
        android:id="@+id/edt_feedback"
        android:layout_margin="@dimen/muoi_dp"
        android:gravity="top"
        android:hint="@string/give_us_feedback_hint"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>